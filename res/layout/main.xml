    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btn_statscalculator"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/lbl_statcalculator" />
        <Button
            android:id="@+id/btn_perkscalculator"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/lbl_perkcalculator" />
    </LinearLayout>

</ScrollView>